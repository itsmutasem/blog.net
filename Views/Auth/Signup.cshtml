@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }
    
    .signup-container {
        background-color: #1e1e1e;
        border: 1px solid #333333;
        border-radius: 10px;
        padding: 1.5rem;
        width: 100%;
        max-width: 450px;
    }
    
    .signup-title {
        font-weight: 700;
        font-size: 1.75rem;
        color: #bb86fc;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    
    .signup-subtitle {
        color: #b0b0b0;
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }
    
    .signup-button-group {
        display: flex;
        justify-content: space-between;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }
    
    .btn-signup-submit {
        background-color: #bb86fc;
        border-color: #bb86fc;
        color: #000000;
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-size: 0.9rem;
        flex: 1;
    }
    
    .btn-signup-submit:hover {
        background-color: #9d5af5;
        border-color: #9d5af5;
        color: #000000;
    }
    
    .btn-back-login {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #333333;
        color: #ffffff;
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-size: 0.9rem;
        flex: 1;
    }
    
    .btn-back-login:hover {
        background-color: rgba(255, 255, 255, 0.2);
        border-color: #666666;
        color: #ffffff;
    }
    
    .form-label {
        color: #ffffff;
        font-weight: 500;
        margin-bottom: 0.3rem;
        font-size: 0.9rem;
    }
    
    .form-control {
        background-color: #2d2d2d;
        border: 1px solid #333333;
        color: #ffffff;
        padding: 0.6rem;
        border-radius: 6px;
        font-size: 0.9rem;
    }
    
    .form-control:focus {
        background-color: #2d2d2d;
        border-color: #bb86fc;
        color: #ffffff;
        box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
    }
    
    .form-control::placeholder {
        color: #666666;
        font-size: 0.9rem;
    }
    
    .mb-3 {
        margin-bottom: 1rem !important;
    }
    
    .form-text {
        color: #888888;
        font-size: 0.8rem;
        margin-top: 0.25rem;
    }
    
    .password-requirements {
        margin-top: 0.5rem;
        padding: 0.75rem;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        border-left: 3px solid #bb86fc;
    }
    
    .requirements-title {
        color: #bb86fc;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    
    .requirements-list {
        color: #b0b0b0;
        font-size: 0.8rem;
        margin-bottom: 0;
        padding-left: 1rem;
    }
    
    .requirements-list li {
        margin-bottom: 0.1rem;
    }
</style>

<!-- Main Content - Centered Vertically -->
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <!-- Sign Up Container -->
                <div class="signup-container">
                    <h2 class="signup-title">Create Account</h2>
                    
                    <form>
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="fullName" 
                                   placeholder="Enter your full name" 
                                   required>
                            
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   placeholder="Enter your email" 
                                   required>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   placeholder="Create a password" 
                                   required>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" 
                                   class="form-control" 
                                   id="confirmPassword" 
                                   placeholder="Confirm your password" 
                                   required>
                        </div>

                        <!-- Buttons -->
                        <div class="signup-button-group">
                            <a class="btn btn-back-login" asp-controller="Auth" asp-action="Login">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                            <button type="submit" class="btn btn-signup-submit">
                                <i class="fas fa-user-plus me-1"></i> Sign Up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>