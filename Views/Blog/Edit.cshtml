@model Blog
@{
ViewData["Title"] = "Edit Blog";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-centered-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }
</style>

<!-- Main Content - Centered Vertically -->
<div class="form-centered-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <!-- Form Container -->
                <div class="form-container">
                    <h2 class="form-title">Edit Blog</h2>

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <!-- Title Field -->
                        <div class="mb-4">
                            <label for="title" class="form-label">Blog Title</label>
                            <input type="text" id="title" name="title" value="@Model.Title" class="form-control" required>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-4">
                            <label for="description" class="form-label">Blog Description</label>
                            <textarea name="description" id="description" class="form-control" rows="5" required>@Model.Description</textarea>
                        </div>
                        
                        <!-- Category Field -->
                        <div class="mb-4">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-control">
                                <option value="Tech">Tech</option>
                                <option value="Life">Life</option>
                                <option value="Business">Business</option>
                                <option value="Business">Education</option>
                                <option value="Business">News</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="button-group">
                            <a class="btn btn-back" asp-controller="Blog" asp-action="Index">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-create-form">
                                <i class="fas fa-plus me-1"></i> Edit Blog
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>