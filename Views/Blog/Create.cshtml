@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Blog</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: rgba(18, 18, 18, 0.95);
            border-bottom: 1px solid #333333;
            padding: 0.75rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            color: #bb86fc !important;
        }

        .nav-link {
            color: #b0b0b0 !important;
            font-weight: 500;
            padding: 0.4rem 0.8rem !important;
            font-size: 0.9rem;
        }

        .nav-link:hover {
            color: #bb86fc !important;
        }

        .nav-link.active {
            color: #bb86fc !important;
            background-color: rgba(187, 134, 252, 0.1);
            border-radius: 6px;
        }

        .main-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .form-container {
            background-color: #1e1e1e;
            border: 1px solid #333333;
            border-radius: 10px;
            padding: 1.5rem;
            width: 100%;
            max-width: 600px;
        }

        .form-title {
            font-weight: 700;
            font-size: 1.5rem;
            color: #bb86fc;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-label {
            color: #ffffff;
            font-weight: 500;
            margin-bottom: 0.3rem;
            font-size: 0.9rem;
        }

        .form-control {
            background-color: #2d2d2d;
            border: 1px solid #333333;
            color: #ffffff;
            padding: 0.6rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .form-control:focus {
            background-color: #2d2d2d;
            border-color: #bb86fc;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
        }

        .form-control::placeholder {
            color: #666666;
            font-size: 0.9rem;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn-back {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #333333;
            color: #ffffff;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.9rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-back:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #666666;
            color: #ffffff;
        }

        .btn-create {
            background-color: #bb86fc;
            border-color: #bb86fc;
            color: #000000;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .btn-create:hover {
            background-color: #9d5af5;
            border-color: #9d5af5;
            color: #000000;
        }

        .mb-4 {
            margin-bottom: 1rem !important;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-blog me-2"></i>BlogMaster
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-home me-1"></i> Blogs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-sign-in-alt me-1"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-plus-circle me-1"></i> Create
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content - Centered Vertically -->
    <div class="main-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <!-- Form Container -->
                    <div class="form-container">
                        <h2 class="form-title">Create New Blog</h2>
                        
                        <form>
                            <!-- Title Field -->
                            <div class="mb-4">
                                <label for="blogTitle" class="form-label">Blog Title</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="blogTitle" 
                                       placeholder="Enter blog title" 
                                       required>
                            </div>

                            <!-- Description Field -->
                            <div class="mb-4">
                                <label for="blogDescription" class="form-label">Blog Description</label>
                                <textarea class="form-control" 
                                          id="blogDescription" 
                                          placeholder="Write your blog content here..." 
                                          rows="5" 
                                          required></textarea>
                            </div>

                            <!-- Buttons -->
                            <div class="button-group">
                                <a class="btn btn-back" asp-controller="Blog" asp-action="Index">
                                    <i class="fas fa-arrow-left me-1"></i> Back
                                </a>
                                <button type="submit" class="btn btn-create">
                                    <i class="fas fa-plus me-1"></i> Create Blog
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>