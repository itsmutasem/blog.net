@model Blog
@{
ViewData["Title"] = "Create New Blog";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-centered-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }
</style>

<!-- Main Content - Centered Vertically -->
<div class="form-centered-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <!-- Form Container -->
                <div class="form-container">
                    <h2 class="form-title">Create New Blog</h2>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <!-- Title Field -->
                        <div class="mb-4">
                            <label for="title" class="form-label">Blog Title</label>
                            <input type="text" id="title" name="title" class="form-control" placeholder="Enter blog title" required>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-4">
                            <label for="description" class="form-label">Blog Description</label>
                            <textarea name="description" id="description" class="form-control" rows="5" placeholder="Write your blog content..." required></textarea>
                        </div>
                        
                        <!-- Categories Select Field -->
                        <div class="mb-4">
                            <label for="category" class="form-label">Blog Category</label>
                            <select asp-for="Category" id="category" class="form-control">
                                <option value="Tech">Tech</option>
                                <option value="Life">Life</option>
                                <option value="Business">Business</option>
                                <option value="Business">Education</option>
                                <option value="Business">News</option>
                            </select>
                        </div>

                        <!-- Buttons -->
                        <div class="button-group">
                            <a class="btn btn-back" asp-controller="Blog" asp-action="Index">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-create-form">
                                <i class="fas fa-plus me-1"></i> Create Blog
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>