@{
    ViewData["Title"] = "Blog Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .blog-title-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }
    
    .blog-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.25rem;
    }
</style>

<!-- Main Content -->
<div class="container mt-3">
    <!-- Header Section -->
    <div class="header-section">
        <h1 class="page-title">All Blogs</h1>
        <a class="btn create-btn" asp-controller="Blog" asp-action="Create">
            <i class="fas fa-plus me-1"></i> Create New Blog
        </a>
    </div>

    <!-- Blogs Container - Single Column Layout -->
    <div class="row">
        <!-- Blog Card 1 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <div class="blog-title-row">
                        <h5 class="card-title">Getting Started with ASP.NET MVC</h5>
                    </div>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <a class="btn btn-action btn-view" asp-controller="Blog" asp-action="Show">
                            <i class="fas fa-eye me-1"></i> View
                        </a>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Card 2 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <div class="blog-title-row">
                        <h5 class="card-title">Bootstrap 5 Modern Designs</h5>
                    </div>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <a class="btn btn-action btn-view" asp-controller="Blog" asp-action="Show">
                            <i class="fas fa-eye me-1"></i> View
                        </a>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Card 3 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <div class="blog-title-row">
                        <h5 class="card-title">Entity Framework Core Tips</h5>
                    </div>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <a class="btn btn-action btn-view" asp-controller="Blog" asp-action="Show">
                            <i class="fas fa-eye me-1"></i> View
                        </a>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>