@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background-color: rgba(18, 18, 18, 0.95);
            border-bottom: 1px solid #333333;
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #bb86fc !important;
        }

        .nav-link {
            color: #b0b0b0 !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
        }

        .nav-link:hover {
            color: #bb86fc !important;
        }

        .nav-link.active {
            color: #bb86fc !important;
            background-color: rgba(187, 134, 252, 0.1);
            border-radius: 8px;
        }

        .card {
            background-color: #1e1e1e;
            border: 1px solid #333333;
            border-radius: 12px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .card-content {
            flex: 1;
            padding: 1.5rem;
        }

        .card-title {
            color: #ffffff;
            font-weight: 600;
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .card-text {
            color: #b0b0b0;
            line-height: 1.6;
            margin-bottom: 0;
        }

        .author-badge {
            display: inline-block;
            background-color: rgba(187, 134, 252, 0.1);
            color: #bb86fc;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .card-actions {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-left: 1px solid #333333;
            height: 100%;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            padding: 0.375rem 0.75rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.875rem;
        }

        .btn-view {
            background-color: rgba(3, 218, 198, 0.1);
            color: #03dac6;
            border: 1px solid rgba(3, 218, 198, 0.3);
        }

        .btn-update {
            background-color: rgba(255, 183, 77, 0.1);
            color: #ffb74d;
            border: 1px solid rgba(255, 183, 77, 0.3);
        }

        .btn-delete {
            background-color: rgba(207, 102, 121, 0.1);
            color: #cf6679;
            border: 1px solid rgba(207, 102, 121, 0.3);
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-top: 1rem;
        }

        .page-title {
            font-weight: 700;
            font-size: 2.5rem;
            color: #bb86fc;
            margin-bottom: 0;
        }

        .create-btn {
            background-color: #bb86fc;
            border-color: #bb86fc;
            color: #000000;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
        }

        .create-btn:hover {
            background-color: #9d5af5;
            border-color: #9d5af5;
            color: #000000;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-blog me-2"></i>BlogMaster
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-home me-1"></i> Blogs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-sign-in-alt me-1"></i> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <!-- Header Section -->
        <div class="header-section">
            <h1 class="page-title">All Blogs</h1>
            <a class="btn create-btn" asp-controller="Blog" asp-action="Create">
                <i class="fas fa-plus me-2"></i> Create New Blog
            </a>
        </div>

        <!-- Blogs Container - Single Column Layout -->
        <div class="row">
            <!-- Blog Card 1 - Full Width -->
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title">Blog Title</h5>
                        <div class="author-badge">
                            <i class="fas fa-user me-1"></i> Author: Ahamd
                        </div>
                        <p class="card-text">Blog description content goes here. This is a sample blog post. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    </div>
                    <div class="card-actions">
                        <div class="action-buttons">
                            <button class="btn btn-action btn-view">
                                <i class="fas fa-eye me-1"></i> View
                            </button>
                            <button class="btn btn-action btn-update">
                                <i class="fas fa-edit me-1"></i> Update
                            </button>
                            <button class="btn btn-action btn-delete">
                                <i class="fas fa-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog Card 2 - Full Width -->
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title">Another Blog</h5>
                        <div class="author-badge">
                            <i class="fas fa-user me-1"></i> Author: Ahamd
                        </div>
                        <p class="card-text">Another blog post description. Each card shows title, author and actions. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    </div>
                    <div class="card-actions">
                        <div class="action-buttons">
                            <button class="btn btn-action btn-view">
                                <i class="fas fa-eye me-1"></i> View
                            </button>
                            <button class="btn btn-action btn-update">
                                <i class="fas fa-edit me-1"></i> Update
                            </button>
                            <button class="btn btn-action btn-delete">
                                <i class="fas fa-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog Card 3 - Full Width -->
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title">Third Blog Post</h5>
                        <div class="author-badge">
                            <i class="fas fa-user me-1"></i> Author: Ahamd
                        </div>
                        <p class="card-text">This demonstrates the layout with multiple blog cards in a grid. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
                    </div>
                    <div class="card-actions">
                        <div class="action-buttons">
                            <button class="btn btn-action btn-view">
                                <i class="fas fa-eye me-1"></i> View
                            </button>
                            <button class="btn btn-action btn-update">
                                <i class="fas fa-edit me-1"></i> Update
                            </button>
                            <button class="btn btn-action btn-delete">
                                <i class="fas fa-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>