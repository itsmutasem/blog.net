@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Blog Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .blog-title-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }

    .blog-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.25rem;
    }
</style>

<div class="container mt-3">
    <!-- Header -->
    <div class="header-section d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-title">All Blogs</h1>
        <a class="btn create-btn" asp-controller="Blog" asp-action="Create">
            <i class="fas fa-plus me-1"></i> Create New Blog
        </a>
    </div>

    <!-- Blogs -->
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No blogs found.
                </div>
            </div>
        }
        else
        {
            @foreach (var blog in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-content p-3">
                            <div class="blog-title-row">
                                <h5 class="card-title">@blog.Title</h5>
                            </div>

                            <div class="author-badge">
                                <i class="fas fa-user me-1"></i>
                                Author: @blog.Author.Name
                            </div>
                        </div>

                        <div class="card-actions p-3 border-top">
                            <div class="action-buttons d-flex gap-2">
                                <a class="btn btn-action btn-view"
                                   asp-controller="Blog"
                                   asp-action="Show"
                                   asp-route-id="@blog.Id">
                                    <i class="fas fa-eye me-1"></i> View
                                </a>

                                <a class="btn btn-action btn-update"
                                   asp-controller="Blog"
                                   asp-action="Edit"
                                   asp-route-id="@blog.Id">
                                    <i class="fas fa-edit me-1"></i> Update
                                </a>

                                <!-- DELETE -->
                                <form asp-controller="Blog"
                                      asp-action="Delete"
                                      asp-route-id="@blog.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this blog?');">

                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn-action btn-delete">
                                        <i class="fas fa-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
