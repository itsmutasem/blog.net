@{
    ViewData["Title"] = "Blog Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Content -->
<div class="container mt-3">
    <!-- Header Section -->
    <div class="header-section">
        <h1 class="page-title">All Blogs</h1>
        <a class="btn create-btn" asp-controller="Blog" asp-action="Create">
            <i class="fas fa-plus me-1"></i> Create New Blog
        </a>
    </div>

    <!-- Blogs Container - Single Column Layout -->
    <div class="row">
        <!-- Blog Card 1 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <h5 class="card-title">Blog Title</h5>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                    <p class="card-text">Blog description content goes here. This is a sample blog post. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <button class="btn btn-action btn-view">
                            <i class="fas fa-eye me-1"></i> View
                        </button>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Card 2 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <h5 class="card-title">Another Blog</h5>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                    <p class="card-text">Another blog post description. Each card shows title, author and actions. Ut enim ad minim veniam, quis nostrud exercitation.</p>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <button class="btn btn-action btn-view">
                            <i class="fas fa-eye me-1"></i> View
                        </button>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Card 3 - Full Width -->
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-content">
                    <h5 class="card-title">Third Blog Post</h5>
                    <div class="author-badge">
                        <i class="fas fa-user me-1"></i> Author: Ahamd
                    </div>
                    <p class="card-text">This demonstrates the layout with multiple blog cards in a grid. Duis aute irure dolor in reprehenderit in voluptate.</p>
                </div>
                <div class="card-actions">
                    <div class="action-buttons">
                        <button class="btn btn-action btn-view">
                            <i class="fas fa-eye me-1"></i> View
                        </button>
                        <a class="btn btn-action btn-update" asp-controller="Blog" asp-action="Edit">
                            <i class="fas fa-edit me-1"></i> Update
                        </a>
                        <button class="btn btn-action btn-delete">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>