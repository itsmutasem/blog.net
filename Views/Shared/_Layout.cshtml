@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BlogMaster</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background-color: rgba(18, 18, 18, 0.95);
            border-bottom: 1px solid #333333;
            padding: 0.75rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            color: #bb86fc !important;
        }

        .nav-link {
            color: #b0b0b0 !important;
            font-weight: 500;
            padding: 0.4rem 0.8rem !important;
            font-size: 0.9rem;
        }

        .nav-link:hover {
            color: #bb86fc !important;
        }

        .nav-link.active {
            color: #bb86fc !important;
            background-color: rgba(187, 134, 252, 0.1);
            border-radius: 6px;
        }

        .card {
            background-color: #1e1e1e;
            border: 1px solid #333333;
            border-radius: 8px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .card-content {
            flex: 1;
            padding: 1rem;
        }

        .card-title {
            color: #ffffff;
            font-weight: 600;
            font-size: 1rem;
            margin-bottom: 0.35rem;
        }

        .card-text {
            color: #b0b0b0;
            line-height: 1.5;
            margin-bottom: 0;
            font-size: 0.85rem;
        }

        .author-badge {
            display: inline-block;
            background-color: rgba(187, 134, 252, 0.1);
            color: #bb86fc;
            padding: 0.2rem 0.6rem;
            border-radius: 16px;
            font-size: 0.8rem;
            font-weight: 500;
            margin-bottom: 0.75rem;
        }

        .card-actions {
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-left: 1px solid #333333;
            height: 100%;
            min-width: 180px;
        }

        .action-buttons {
            display: flex;
            gap: 0.4rem;
        }

        .btn-action {
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.85rem;
        }

        .btn-view {
            background-color: rgba(3, 218, 198, 0.1);
            color: #03dac6;
            border: 1px solid rgba(3, 218, 198, 0.3);
        }

        .btn-update {
            background-color: rgba(255, 183, 77, 0.1);
            color: #ffb74d;
            border: 1px solid rgba(255, 183, 77, 0.3);
        }

        .btn-delete {
            background-color: rgba(207, 102, 121, 0.1);
            color: #cf6679;
            border: 1px solid rgba(207, 102, 121, 0.3);
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-top: 0.75rem;
        }

        .page-title {
            font-weight: 700;
            font-size: 1.75rem;
            color: #bb86fc;
            margin-bottom: 0;
        }

        .create-btn {
            background-color: #bb86fc;
            border-color: #bb86fc;
            color: #000000;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .create-btn:hover {
            background-color: #9d5af5;
            border-color: #9d5af5;
            color: #000000;
        }

        .form-container {
            background-color: #1e1e1e;
            border: 1px solid #333333;
            border-radius: 10px;
            padding: 1.5rem;
            width: 100%;
            max-width: 600px;
        }

        .form-title {
            font-weight: 700;
            font-size: 1.5rem;
            color: #bb86fc;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-label {
            color: #ffffff;
            font-weight: 500;
            margin-bottom: 0.3rem;
            font-size: 0.9rem;
        }

        .form-control {
            background-color: #2d2d2d;
            border: 1px solid #333333;
            color: #ffffff;
            padding: 0.6rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .form-control:focus {
            background-color: #2d2d2d;
            border-color: #bb86fc;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(187, 134, 252, 0.25);
        }

        .form-control::placeholder {
            color: #666666;
            font-size: 0.9rem;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn-back {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #333333;
            color: #ffffff;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.9rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-back:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #666666;
            color: #ffffff;
        }

        .btn-create-form {
            background-color: #bb86fc;
            border-color: #bb86fc;
            color: #000000;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .btn-create-form:hover {
            background-color: #9d5af5;
            border-color: #9d5af5;
            color: #000000;
        }

        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .row {
            margin-left: -0.5rem;
            margin-right: -0.5rem;
        }

        .col-12 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .mb-3 {
            margin-bottom: 1rem !important;
        }

        .mb-4 {
            margin-bottom: 1.5rem !important;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Blog" asp-action="Index">
                <i class="fas fa-blog me-1"></i>Blog
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                           asp-controller="Blog" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Blogs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>